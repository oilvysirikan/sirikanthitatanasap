# ============================================
# ðŸš€ CRM Backend Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_database
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/crm_database

# ============================================
# Redis Configuration (for caching & sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ============================================
# Shopify Integration
# ============================================
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# AI & Machine Learning
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# LINE Messaging API
# ============================================
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_BOT_USER_ID=your_line_bot_user_id

# ============================================
# Facebook Messenger
# ============================================
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=your_facebook_verify_token
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ============================================
# File Upload & Storage
# ============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ============================================
# Security & Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# ============================================
# External APIs
# ============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
THAILAND_POST_API_KEY=your_thailand_post_api_key

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ============================================
# Development Only
# ============================================
DEBUG=true
MOCK_EXTERNAL_APIS=false
