{% comment %}
  Cart Upsell Block
{% endcomment %}

<div class="cart-upsell">
  <h3>{{ block.settings.title }}</h3>
  <p>{{ block.settings.description }}</p>
</div>

<style>
  .cart-upsell {
    padding: 20px;
    background: #f5f5f5;
    border-radius: 8px;
    margin: 20px 0;
  }
</style>

{% schema %}
{
  "name": "Cart Upsell",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "You might also like"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Complete your order with these items"
    }
  ]
}
{% endschema %}
